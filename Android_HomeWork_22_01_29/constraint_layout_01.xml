   과제 1번 (ConstraintLayout)
-->

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_01"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="tv_01"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_02"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_02"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="tv_02"
        android:textSize="40sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_01"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_03"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="tv_03"
        android:textSize="40sp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/tv_01"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_04"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="tv_04"
        android:textSize="40sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_05"
        />

    <TextView
        android:id="@+id/tv_05"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="tv_05"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toRightOf="@id/tv_04"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>