  과제 3번 (RelativeLayout)
-->

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#ff0000"
        android:layout_below="@id/tv_04"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/tv_02"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#ff0000"
        />

    <TextView
        android:id="@+id/tv_03"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#0000ff"
        android:layout_toRightOf="@id/tv_02"
        />

    <TextView
        android:id="@+id/tv_04"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_below="@id/tv_02"
        android:background="#0000ff"
        android:rotation="90"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="-8dp"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_below="@id/tv_04"
        android:layout_marginTop="25dp"
        android:background="#0000ff"
        android:rotation="90"
        android:layout_marginLeft="-8dp"
        />

    <TextView
        android:id="@+id/tv_05"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#0000ff"
        android:layout_toRightOf="@id/tv_03"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#0000ff"
        android:layout_toRightOf="@id/tv_01"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#0000ff"
        android:layout_below="@id/tv_01"
        android:rotation="90"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="50dp"
        />




</RelativeLayout>