  과제 3번 (RelativeLayout)
-->

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#ff0000"
        />

    <TextView
        android:id="@+id/tv_01_right"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#0000ff"
        android:layout_toRightOf="@id/tv_01"
        />

    <TextView
        android:id="@+id/tv_01_below"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:background="#0000ff"
        android:layout_below="@id/tv_01"
        />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#ff0000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_top_right"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#0000ff"
        android:layout_toRightOf="@id/tv_center"
        />

    <TextView
        android:id="@+id/tv_left_below"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:background="#0000ff"
        android:layout_below="@id/tv_center"
        />

    <TextView
        android:id="@+id/tv_center_right"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#0000ff"
        android:layout_toRightOf="@id/tv_center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_center_below"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:background="#0000ff"
        android:layout_below="@id/tv_center"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>